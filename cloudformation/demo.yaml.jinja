---
AWSTemplateFormatVersion: '2010-09-09'
Description: Demo custom {{resource_name}} provider
Resources:
  '{{resource_name}}':
    Type: '{{resource_type_name}}'
    Properties:
      Value: Hello World!
      ServiceToken: !Sub 'arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:function:{{project_name}}'


Outputs:
  '{{resource_name}}Id':
    Value: !Ref '{{resource_name}}'
    Description: the id of the {{resource_name}}

  '{{resource_name}}Attribute':
    Value: !GetAtt '{{resource_name}}.Value'
    Description: attribute value of {{resource_name}}